{{>adminNav}}
{{!-- <div class="container"> --}}
<div class="row m-3" style="height: 100vh">
  <div class="col-8 p-3">

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Class ID</th>
          <th scope="col">Class</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.course}}</td>
          <td>{{this.description}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
  <div class="col-4 p-3 border">

    <h4 class="text-center">Add a New Record</h4>
    <hr class="pb-3">
    <form action="/admin/class" method="POST">
      <div class="form-group">
        <label for="course"> Class</label>
        <input name="course" type="text" class="form-control" id="course" placeholder="Enter class name">
      </div>
      <div class="form-group">
        <label for="classDescription">Class Description</label>
        <input name="description" type="text" class="form-control" id="classDescription"
          placeholder="Enter class description">
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>
  </div>
</div>